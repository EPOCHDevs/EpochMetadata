{
  "tests": [
    {
      "title": "Simple Pie Chart Report Test",
      "input": {
        "label": [
          "Stocks",
          "Bonds",
          "Real Estate",
          "Commodities",
          "Cash"
        ],
        "value": [
          45.5,
          25.2,
          15.8,
          8.3,
          5.2
        ]
      },
      "expect": {
        "type": "tearsheet",
        "charts": [
          {
            "title": "Portfolio Allocation",
            "category": "Charts",
            "type": "WidgetPieChart",
            "slices": [
              {
                "label": "Stocks",
                "value": 45.5
              },
              {
                "label": "Bonds",
                "value": 25.2
              },
              {
                "label": "Real Estate",
                "value": 15.8
              },
              {
                "label": "Commodities",
                "value": 8.3
              },
              {
                "label": "Cash",
                "value": 5.2
              }
            ],
            "inner_size": 0
          }
        ]
      },
      "options": {
        "transform_name": "pie_chart_report",
        "title": "Portfolio Allocation",
        "label_column": "label",
        "value_column": "value",
        "inner_size": 0,
        "output_id": "test_pie_chart",
        "inputs": "{SLOT: [label, value]}",
        "timeframe": "1D"
      }
    }
  ]
}